root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{py,md,txt}]
indent_style = space
trim_trailing_whitespace = true
indent_size = 4
charset = utf-8

# Use 2 spaces for yml files
[*.yml]
indent_style = space
indent_size = 2

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
